# Auto detect text files and perform LF normalization
* text=auto

# Explicitly declare text files you want to always be normalized and converted
# to native line endings on checkout.
*.ts text
*.tsx text
*.js text
*.jsx text
*.json text
*.md text
*.yml text
*.yaml text
*.css text
*.scss text
*.html text
*.xml text
*.txt text
*.sql text

# Configuration files
*.config.js text
*.config.ts text
*.config.json text
.env.* text
.gitignore text
.gitattributes text
README* text
LICENSE* text
CHANGELOG* text
CONTRIBUTING* text

# Shell scripts (always use LF line endings)
*.sh text eol=lf
*.bash text eol=lf

# Windows batch files (always use CRLF line endings)
*.bat text eol=crlf
*.cmd text eol=crlf

# Declare files that will always have CRLF line endings on checkout
*.sln text eol=crlf

# Denote all files that are truly binary and should not be modified
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg binary
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary
*.pdf binary
*.zip binary
*.tar.gz binary
*.tgz binary
*.mp4 binary
*.webm binary
*.mp3 binary
*.wav binary

# Archives
*.7z binary
*.gz binary
*.tar binary
*.zip binary

# Documents
*.pdf binary
*.doc binary
*.docx binary
*.xls binary
*.xlsx binary
*.ppt binary
*.pptx binary

# Exclude files from exporting
.gitattributes export-ignore
.gitignore export-ignore
.claude/ export-ignore
docs/ export-ignore
test/ export-ignore
tests/ export-ignore
*.test.* export-ignore
*.spec.* export-ignore

# Language-specific settings
package-lock.json -diff
yarn.lock -diff
pnpm-lock.yaml -diff

# Generated files
*.min.js -diff
*.min.css -diff
dist/* -diff
build/* -diff
.next/* -diff